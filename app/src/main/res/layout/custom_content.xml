    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="CONFIRM" />


</LinearLayout>
